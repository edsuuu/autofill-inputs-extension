{
    "{{chrome}}.manifest_version": 3,
    "{{firefox}}.manifest_version": 2,
    "name": "Auto preenchimento",
    "description": "AutoFill inputs in all page with forms.",
    "version": "1.1.0",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "favicon-16x16.png",
        "32": "favicon-32x32.png",
        "48": "favicon-48x48.png",
        "128": "favicon-128x128.png"
    },
    "{{chrome}}.action": {
        "default_popup": "src/popup.html"
    },
    "{{firefox}}.browser_action": {
        "default_popup": "src/popup.html"
    },
    "background": {
        "{{chrome}}.service_worker": "src/background.ts",
        "{{firefox}}.scripts": [
            "src/background.ts"
        ]
    },
    "options_ui": {
        "page": "src/options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/utils/autofill.ts"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/utils/floating-button.ts"
            ],
            "run_at": "document_idle"
        }
    ]
}